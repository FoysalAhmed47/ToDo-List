<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/background_design"
    tools:context=".RegisterActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/register_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#22CEBD"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        ></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/register_image"
            android:layout_width="100dp"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/bnn"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:padding="17dp"
            android:textColorHint="#F3F1F1"
            android:textColor="#ECE4E4"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/register_image"
            android:background="@drawable/inputs"
            android:hint="Name"
            android:textAlignment="textStart"
            android:textSize="19sp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="17dp"
            android:textColorHint="#F3F1F1"
            android:textColor="#ECE4E4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/inputs"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAlignment="textStart"
            android:textSize="19sp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="17dp"
            android:textColorHint="#F3F1F1"
            android:textColor="#ECE4E4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/inputs"
            android:hint="Phone"
            android:inputType="phone"
            android:textAlignment="textStart"
            android:textSize="19sp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="17dp"
            android:textColorHint="#F3F1F1"
            android:textColor="#ECE4E4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/inputs"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textSize="19sp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/signupbtn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputs"
            android:clickable="true"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold">
        </Button>

        <TextView
            android:id="@+id/signinpage_qus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Registered? Login Here"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#fff"
            android:clickable="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="2dp"

            />



    </LinearLayout>


</LinearLayout>